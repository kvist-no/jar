/// Defines a docker compose service. See [the official documentation](https://docs.docker.com/compose/compose-file/compose-file-v3/#service-configuration-reference) for more information.
class Service {
  /// Specify the image to start the container from. Can either be a repository/tag or a partial image ID.
  image: String?

  /// Optional container host name. See [options for `docker run`](https://docs.docker.com/reference/cli/docker/container/run/#options).
  hostname: String?

  /// Optional override of the default command
  command: String?

  /// Configuration options that are applied at build time.
  build: (String|Build)?

  /// Optional environment variables
  environment: Mapping<String, String>?

  /// Optional list of ports to expose.
  /// Per now only supports the short (string) syntax. See [the official documentation](https://docs.docker.com/compose/compose-file/compose-file-v3/#ports) for more information.
  ports: Listing<String>?

  /// Optional list of volumes to mount.
  /// Per now only supports the short (string) syntax. See [the official documentation](https://docs.docker.com/compose/compose-file/compose-file-v3/#volumes) for more information.
  volumes: Listing<String>?
}


class Build {
  /// Path to the build context
  context: String

  /// Path to the Dockerfile
  dockerfile: String?

  /// Optional build arguments
  args: Mapping<String, String>?
}